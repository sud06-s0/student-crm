{
  "functions": {
    "api/leads/options.js": {
      "maxDuration": 10,
      "includeFiles": "src/config/tableNames.js"
    },
    "api/leads/create.js": {
      "maxDuration": 10,
      "includeFiles": "src/config/tableNames.js"
    }
  },
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ]
}